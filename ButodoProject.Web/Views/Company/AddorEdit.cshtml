@model ButodoProject.Core.Service.Dto.CompanyDto

@{
    ViewData["Title"] = "Şirket Oluştur";
}

<div class="container-fluid">
    <p class="mb-4 mt-4"></p>
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Şirket Oluştur</h6>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    <form asp-action="AddorEdit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />

                        <div class="form-group">
                            <label asp-for="Name" class="control-label">Adı</label>
                            <input asp-for="Name" class="form-control"/>
                            <span asp-validation-for="Name" class="text-danger"></span>

                        </div>

                        <div class="form-group">
                           <button type="submit" class="btn btn-info"><i class="fa fa-save"></i> @(Model.Id == Guid.Empty ? "Yeni Oluştur" : "Güncelle")</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>


        <div class="ml-4">
            <a asp-action="index">Listeye Geri Dön</a>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }